<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_brazilian_state"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp"
            app:riv_border_color="@android:color/darker_gray"
            app:riv_border_width="1dp"
            app:riv_corner_radius="4dp"
            android:contentDescription="@null"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/text_brazilian_state_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_brazilian_state"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/top_margin"
            android:layout_toEndOf="@id/image_brazilian_state"
            android:fontFamily="@font/poppins_bold"
            android:textSize="12sp"
            tools:text="SP" />

        <TextView
            android:id="@+id/text_confirmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_brazilian_state_name"
            android:layout_marginTop="@dimen/top_margin"
            android:layout_toEndOf="@id/image_brazilian_state"
            android:text="@string/confirmed"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_number_confirmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_brazilian_state_name"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/top_margin"
            android:textSize="12sp"
            tools:text="0" />

        <TextView
            android:id="@+id/text_deaths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_confirmed"
            android:layout_marginTop="@dimen/top_margin"
            android:layout_toEndOf="@id/image_brazilian_state"
            android:text="@string/deaths"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_number_deaths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_confirmed"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/top_margin"
            android:textSize="12sp"
            tools:text="0" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
